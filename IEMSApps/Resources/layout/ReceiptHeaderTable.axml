            android:layout_height="wrap_content"
            android:id="@+id/txtModBayaran"
            android:layout_weight="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:ellipsize="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rangkaian "
            android:layout_weight="6"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text=" : "/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtRangkaian"
            android:layout_weight="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:ellipsize="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No. Transaksi iPayment "
            android:layout_weight="6"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text=" : "/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtNoTransaksiIpayment"
            android:layout_weight="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:ellipsize="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No. Transaksi RMA "
            android:layout_weight="6"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text=" : "/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtNoTransaksiRMA"
            android:layout_weight="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:ellipsize="end" />
    </LinearLayout>
</LinearLayout>