	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
		android:background="@color/toolbarcolor">
		<TextView
			android:text="SENARAI DATA PILIHAN"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minWidth="25px"
			android:minHeight="25px"
			android:id="@+id/lblTitle"
			android:textColor="@color/black"
			android:gravity="center"
			android:textStyle="bold" />
	</LinearLayout>
	<LinearLayout		
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="10dp"
		android:padding="10dp"
		android:orientation="vertical">		
		<TextView
			android:text="Sila pilih Jenis Data untuk dimuatturun"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/red"
			android:textStyle="bold"
			android:gravity="center_vertical"/>
		<TextView
			android:text="Nota : Data pilihan yang di highlight mempunyai perubahan data"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/red"
			android:textStyle="italic"
			android:gravity="center_vertical"/>
		<LinearLayout
			android:id="@+id/linearHeader"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:weightSum="38">
			<TextView
				android:text="Pilih"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="0dp"
				android:layout_weight="3"
				android:layout_height="wrap_content"
				android:textColor="#0000ff"
				android:textStyle="bold"
				android:gravity="center_vertical"/>
			<TextView
				android:text="Jenis Data"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="0dp"
				android:layout_weight="15"
				android:layout_height="wrap_content"
				android:textColor="#0000ff"
				android:textStyle="bold"
				android:gravity="center_vertical"/>
			<TextView
				android:text="Jumlah\n(Apps)"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="0dp"
				android:layout_weight="10"
				android:layout_height="wrap_content"
				android:textColor="#0000ff"
				android:textStyle="bold"
				android:gravity="right" />
			<TextView
				android:text="Jumlah\n(Sistem)"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="0dp"
				android:layout_weight="10"
				android:layout_height="wrap_content"
				android:textColor="#0000ff"
				android:textStyle="bold"
				android:gravity="right" />
		</LinearLayout>
